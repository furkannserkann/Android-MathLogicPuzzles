<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fsfy.mathlogicquiz">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:name=".Custom.AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/global_tracker" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name=".Activity.Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.Main"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" >

        </activity>

        <activity android:name=".Activity.Loading_Full"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" >

        </activity>

        <activity android:name=".Activity.QuizGame"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" >

        </activity>

        <activity android:name=".Activity.Levels"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" >

        </activity>


        <activity android:name=".Activity.Tebrikler"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" >

        </activity>


        <activity android:name=".Activity.Contact"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" >

        </activity>

    </application>

</manifest>