<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/itemlevels_linearlayout_color"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0.2dp"
            android:layout_marginTop="0.2dp"
            android:layout_marginEnd="0.2dp"
            android:layout_marginBottom="0.2dp"
            android:background="@drawable/radius_button"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/itemlevels_imageview_lock"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/lock"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/fredoka_one"
                    android:id="@+id/itemlevels_textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/transparent_white"
                    android:textSize="19sp" />
            </LinearLayout>


        </RelativeLayout>

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="88dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="2.5dp"
                android:paddingRight="2.5dp">

                <ImageView
                    android:id="@+id/itemlevel_star1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_off"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="2.5dp"
                android:paddingRight="2.5dp">

                <ImageView
                    android:id="@+id/itemlevel_star2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_off"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="2.5dp"
                android:paddingRight="2.5dp">

                <ImageView
                    android:id="@+id/itemlevel_star3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_star_off"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>