<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contact_linear_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/black_item1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/contact_linear_backbutton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/back_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quizgame_textview_actionhead"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:text="@string/contact"
                    android:textColor="#FFF"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:gravity="bottom|center"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:fontFamily="@font/quicksand_bold"
                    android:id="@+id/contact_textview_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:paddingBottom="5dp"
                    android:text="@string/name"
                    android:textColor="@android:color/white" />

                <EditText
                    android:fontFamily="@font/quicksand_bold"
                    android:id="@+id/contact_plaintext_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/plaintext_design"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="50dp"
                android:paddingRight="30dp"
                android:paddingBottom="50dp">

                <TextView
                    android:fontFamily="@font/quicksand_bold"
                    android:id="@+id/contact_textview_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:paddingBottom="5dp"
                    android:text="@string/message"
                    android:textColor="@android:color/white" />

                <EditText
                    android:fontFamily="@font/quicksand_bold"
                    android:id="@+id/contact_plaintext_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/plaintext_design"
                    android:ems="10"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:paddingLeft="9dp"
                    android:paddingTop="9dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="9dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:gravity="center|top"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <LinearLayout
                    android:id="@+id/contact_linear_send"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/radius_button"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imageView_contact"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/contact2" />

                    <TextView
                        android:fontFamily="@font/quicksand_bold"
                        android:id="@+id/contact_textview_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/send"
                        android:textColor="#FFF"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>